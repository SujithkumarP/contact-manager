 {{#if this.pull}}
  <form.group>
    <div class="form-group row">
    <label for="name" class="col-sm-2 ml-5 mt-3 col-form-label">Name</label>
    <div class="col-sm-5 mt-3">
      <Input  type="text" class="form-control" @id="name" placeholder="Name" @value={{this.name}}/>
    </div>
  </div>

  <div class="form-group row">
  <label for="nickname" class="col-sm-2 ml-5  col-form-label">Nickname</label>
  <div class="col-sm-5">
    <Input  type="text" class="form-control" @id="nickname" placeholder="NickName" @value={{this.nickname}}/>
  </div>
</div>

<div class="form-group row">
<label for="birthday" class="col-sm-2 ml-5 col-form-label">Birthday</label>
<div class="col-sm-5">
  <Input  type="Date" class="form-control" @id="birthday" placeholder="DOB" @value={{this.birthday}}/>
</div>
</div>

<div class="form-group row">
<label for="email" class="col-sm-2 ml-5 col-form-label">Email</label>
<div class="col-sm-5">
  <Input  type="email" class="form-control" @id="email" placeholder="Email" @value={{this.email}}/>
</div>
</div>

<div class="form-group row">
<label for="mobilenumber" class="col-sm-2 ml-5  col-form-label">MobileNumber</label>
<div class="col-sm-5">
  <Input  type="text" class="form-control" @id="mobilenumber" @value={{this.mobilenumber}}/>
</div>
</div>

<button type="submit" class="btn btn-primary ml-5 mt-3" {{action "add"}}>Save</button>
  </form.group>
